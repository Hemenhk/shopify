{% assign footer_menu_linklist = linklists[section.settings.footer_menu].links %}

<h2 class="uppercase tracking-widest pb-4">{{ linklists[section.settings.footer_menu].title }}</h2>
<div class="flex flex-col gap-3">
  {% for link in footer_menu_linklist %}
    <p class="tracking-wide text-sm">
      <a href="{{ link.url }}">{{ link.title }}</a>
    </p>
  {% endfor %}
</div>