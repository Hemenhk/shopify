<div class="flex flex-col justify-center py-8" style="background-color: {{ section.settings.perk_background_color }};">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4">
      {% for block in section.blocks %}

        <div class="flex flex-col items-center justify-center gap-5 text-center lg:flex-row lg:items-start">
          <h2 class="font-medium tracking-wider uppercase" style="color: {{ block.settings.perk_heading_color | default: section.settings.perk_heading_color }};">{{ block.settings.perk_heading | default: section.settings.perk_heading }}</h2>
          <p class="tracking-wider w-1/3" style="color: {{ block.settings.perk_text_color | default: section.settings.perk_text_color }};">{{ block.settings.perk_text | default: section.settings.perk_text }}</p>
        </div>
      {% endfor %}
    </div>

  </div>
</div>

